<div class="wrapper" style="margin-top: 100px;">
 <div class="container">
  <div class="row">
    <div class="col-md-4">
      <div class="article-img" style="background-image: url('<%= cl_image_path @article.photo %>')">
      </div>
    </div>
    <div class="col-md-8">
      <div class="title-article">
        <h3><%= @article.title  %></h3>
      </div>
      <div class="content-article">
        <p><%= @article.content.html_safe %></p>
        <p style="margin-top: 30px; font-weight: bolder; font-style: underline;"><%= @article.auteur  %></p>
      </div>
    </div>
  </div>
 </div>
</div>

